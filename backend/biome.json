{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"files": {
		"ignoreUnknown": true
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"globals": ["Bun"]
	},

	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
